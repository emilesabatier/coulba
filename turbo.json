{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "dev": {
            "dependsOn": [
                "^build"
            ],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "lib/**",
                ".next",
                "dist/**",
                "public/**"
            ]
        },
        "preview": {
            "dependsOn": [
                "build"
            ]
        },
        "start": {
            "dependsOn": [
                "build"
            ]
        }
    }
}
