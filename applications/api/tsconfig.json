{
    "extends": "@adonisjs/tsconfig/tsconfig.app.json",
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./build",
        "paths": {
            "#controllers/*": [
                "./src/controllers/*.js"
            ],
            "#exceptions/*": [
                "./src/exceptions/*.js"
            ],
            "#routes/*": [
                "./src/routes/*.js"
            ],
            "#services/*": [
                "./src/services/*.js"
            ],
            "#tests/*": [
                "./tests/*.js"
            ],
            "#start/*": [
                "./start/*.js"
            ],
            "#config/*": [
                "./config/*.js"
            ],
        },
    },
}
