{
    "extends": "@adonisjs/tsconfig/tsconfig.app.json",
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./build",
        "paths": {
            "#controllers/*": [
                "./src/controllers/*.js"
            ],
            "#exceptions/*": [
                "./src/exceptions/*.js"
            ],
            "#models/*": [
                "./src/models/*.js"
            ],
            "#mails/*": [
                "./src/mails/*.js"
            ],
            "#services/*": [
                "./src/services/*.js"
            ],
            "#listeners/*": [
                "./src/listeners/*.js"
            ],
            "#events/*": [
                "./src/events/*.js"
            ],
            "#middleware/*": [
                "./src/middleware/*.js"
            ],
            "#validators/*": [
                "./src/validators/*.js"
            ],
            "#providers/*": [
                "./providers/*.js"
            ],
            "#policies/*": [
                "./src/policies/*.js"
            ],
            "#abilities/*": [
                "./src/abilities/*.js"
            ],
            "#tests/*": [
                "./tests/*.js"
            ],
            "#start/*": [
                "./start/*.js"
            ],
            "#config/*": [
                "./config/*.js"
            ],
        },
    },
}
